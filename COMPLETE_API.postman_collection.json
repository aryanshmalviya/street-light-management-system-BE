    {
      "name": "Street Light Control (MQTT)",
      "item": [
        {
          "name": "Control Single Pole (ON/OFF)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"OFF\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/lights/POLE-42/control",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "lights",
                "POLE-42",
                "control"
              ]
            },
            "description": "Send ON/OFF command to a specific street light pole via MQTT. The command is published to the MQTT broker which will control the physical device."
          },
          "response": []
        },
        {
          "name": "Control All Poles in Zone (ON/OFF)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"command\": \"OFF\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/lights/zone/ZONE-01/control",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "lights",
                "zone",
                "ZONE-01",
                "control"
              ]
            },
            "description": "Send ON/OFF command to all street light poles in a specific zone via MQTT. Commands are published for each pole in the zone. Returns success/failure status for each pole."
          },
          "response": []
        }
      ]
    },
    {
